<!-- Set the page title to "Ranking" -->
<% content_for :title do %>Ranking<% end %>

<div id="ranking_header" class="page-header">
  <h3><i class="fa fa-trophy"></i>  Ranking das Rodovias Federais<br><br>
    <small>
     <ul class="nav navbar-nav navbar-right">
       <div class="dropdown" id="rate_types">
        
          Você está visualizando o ranking na taxa de 
          <label class="dropdown-toggle" data-toggle="dropdown">
            <font color="#EEC900">Acidentes/Km</font>
            <span class="fa fa-chevron-down"></span>
          </label>

          <ul class="dropdown-menu" role="menu" >
            <li role="presentation">
              <%= link_to 'Porcentagem em relação ao total', new_highway_path  %>
            </li>
          </ul>

      </div>
    </ul><br>
    </small>
  </h3> 
</div>

<br>

<div align="center">
  <div id="ranking_panel" class="panel panel-warning">
    
    <div class="panel panel-heading">
      <h5 class="panel-title" align="center">Ranking Completo</h5>
    </div>

    <div id="ranking" class="content">
      <div class="panel-body">
        <table class="table table-hover" >
          <thread>
            <tr>
            <th class="text-center">Posição</th>
            <th class="text-center">BR</th>
            <th class="text-center">Acidentes/Km</th>
            </tr>
          </thread>
          <tbody>
            <% @highway.each do |h| %>
              <% if h.accidentsRate != 0.0 && h.accidentsRate != nil %>
                <tr></tr>
                <td><%= h.rankingPosition %>º </td>
                <td><%= h.idBr %></td>
                <td><%= format("%.4f",h.accidentsRate) %></td>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>
